<% if session[:admin] then %>
	<%= link_to edit_post_path(@post), class: “btn btn-default” do %>
		<span class=”glyphicon glyphicon-align-left” aria-hidden=”true”></span> Edit
	<% end %>
	<%= link_to @post, method: :delete, data: { confirm: “Are you sure?”}, class: “btn btn-default” do %>
		<span class=”glyphicon glyphicon-trash” aria-hidden=”true”></span> Delete
	<% end %> 
<% end %>

<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<%= image_tag post.image_url.to_s %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" %>